{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Terrain list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Icao</th>
                <th>Iata</th>
                <th>Description</th>
                <th>Altitude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('terrain_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.latitude }}</td>
                <td>{{ entity.longitude }}</td>
                <td>{{ entity.iCAO }}</td>
                <td>{{ entity.iATA }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.altitude }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('terrain_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('terrain_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('terrain_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
